{
  "metadata": {
    "name": "Istio",
    "description": "An open platform to connect, manage, and secure microservices.",
    "logoLink": "https://istio.io/img/istio-whitelogo-bluebackground-framed.svg",
    "links": [
      {
        "label": "Homepage",
        "href": "https://istio.io"
      },
      {
        "label": "Github Repo",
        "href": "https://github.com/istio/istio"
      }
    ]
  },
  "srcRoot": "..",
  "extensions": [
    "go",
    "yaml",
    "proto",
    "sh"
  ],
  "analyzerOverrides": [],
  "ignore": [
    {
      "pathPattern": ".*/[.][a-zA-Z0-9_]+.*",
      "contentPattern": "",
      "include": true,
      "note": "Hidden files and folders"
    }
  ],
  "main": {
    "name": "main",
    "sourceFileFilters": [
      {
        "pathPattern": ".*",
        "contentPattern": "",
        "include": true,
        "note": ""
      }
    ]
  },
  "test": {
    "name": "test",
    "sourceFileFilters": [
      {
        "pathPattern": ".*_tests[.].*",
        "contentPattern": "",
        "include": true,
        "note": "Test files"
      },
      {
        "pathPattern": ".*/tests/.*",
        "contentPattern": "",
        "include": true,
        "note": "Test files"
      }
    ]
  },
  "generated": {
    "name": "generated",
    "sourceFileFilters": [
      {
        "pathPattern": "",
        "contentPattern": "// This file was autogenerated by.*",
        "include": true,
        "note": ""
      }
    ]
  },
  "buildAndDeployment": {
    "name": "build and deployment",
    "sourceFileFilters": [
      {
        "pathPattern": ".*[.]sh",
        "contentPattern": "",
        "include": true,
        "note": "Scripts"
      }
    ]
  },
  "other": {
    "name": "other",
    "sourceFileFilters": []
  }
}
